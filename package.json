{
  "name": "user-management-system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install",
    "build": "lerna run build --stream --include-dependencies",
    "clean": "lerna clean -y && lerna run clean --parallel",
    "start": "lerna run start --parallel",
    "start:react": "yarn workspace @user-management/react start",
    "start:theia": "yarn workspace @user-management/theia start",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lerna": "^7.1.4",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-router-dom": "^6.20.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "resolutions": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
